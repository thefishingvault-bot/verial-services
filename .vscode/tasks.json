{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "lint",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"pnpm lint"
			],
			"isBackground": false,
			"problemMatcher": [
				"$eslint-stylish"
			],
			"group": "build"
		},
		{
			"label": "typecheck",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"pnpm",
				"tsc",
				"--noEmit"
			],
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-Command",
				"pnpm run build"
			],
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		}
	]
}